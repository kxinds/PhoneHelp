<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingBottom="5dp"
    tools:context=".PhoneManageActivity" 
     android:orientation="vertical">

    <LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >
        <ImageView       android:layout_height="28dp"
                         android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:paddingLeft="10dp"
                            android:src="@drawable/btn_homeasup_default"
                            android:id="@+id/phonemanage_back"
             />
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="软件管家"
        android:gravity="center"
       
        android:textSize="22dp" 

        />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="0" >

        <com.example.phone.view.MysoftBall
            android:id="@+id/mysoftBall1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_weight="0" 
            android:background="@color/aqua"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_weight="0"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                  
                    android:background="@color/yellow" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空闲内存" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                                            android:layout_marginLeft="20dp"
                            
                
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    
                    android:background="@color/greenyellow"/>

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已用内存" />

            </LinearLayout>
            
        </LinearLayout>
        
    </LinearLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
         android:textSize="20dp"
        android:text="设备空间" />
    <com.example.phone.view.AutoProgressBar
            android:id="@+id/phoneManage_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:progress="30"
            android:progressDrawable="@drawable/myprogressbar" />

    <TextView
        android:id="@+id/phonemanage_bili"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:text="空闲容量/总容量" />
    
    <LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0" 
        android:id="@+id/allprogaram"
        android:onClick="softClick">
          <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="全部软件"
       

        />
        <ImageView       android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:src="@drawable/ic_arrows_right"
             />
      
</LinearLayout>
<LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:id="@+id/sysprogaram"
        android:onClick="softClick" >
          <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="系统软禁"
       

        />
        <ImageView       android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:src="@drawable/ic_arrows_right"
             />
      
</LinearLayout>
<LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:layout_weight="0"
        android:id="@+id/userprogaram"
        
        android:onClick="softClick" >
          <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="用户软件"
       

        />
        <ImageView       android:layout_height="wrap_content"
                         android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:src="@drawable/ic_arrows_right"
             />
      
</LinearLayout>
    

</LinearLayout>