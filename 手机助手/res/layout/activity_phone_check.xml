<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout 
          android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >
        <ImageView       android:layout_height="28dp"
                         android:layout_width="wrap_content"
                            android:layout_weight="0"
                            android:paddingLeft="10dp"
                            android:src="@drawable/btn_homeasup_default"
                            android:id="@+id/phone_check_back"
             />
        <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="手机检测"
        android:gravity="center"
       
        android:textSize="22dp" 

        />
</LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="164dp"
        android:orientation="vertical" >

        <com.example.phone.view.AutoProgressBar
            android:id="@+id/phoneCheck_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="160dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:progress="30"
            android:progressDrawable="@drawable/myprogressbar" />

        <TextView
            android:id="@+id/phoneCheck_tv"
            android:layout_width="25dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/phoneCheck_bar"
            android:background="@color/beige" />
        
        <com.example.phone.view.AutoText
        android:id="@+id/phoneCheck_baifen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        
        android:layout_toRightOf="@+id/phoneCheck_tv"
        
        android:text="AutoText" />
</RelativeLayout>

    

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/phonecheck_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>
    

</LinearLayout>