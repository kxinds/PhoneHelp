<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PhoneCleanActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0" >

        <ImageView
            android:id="@+id/phoneSpeed_back"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_weight="0"
            android:paddingLeft="10dp"
            android:src="@drawable/btn_homeasup_default" 
  />

       <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="手机加速"
            android:textSize="22dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/speed_tv_phonename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:layout_gravity="center"
             />

        <TextView
            android:id="@+id/speed_tv_banben"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:layout_gravity="center"/>

        <com.example.phone.view.AutoProgressBar
            android:id="@+id/speed_bar"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/myprogressbar"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            
                     />
         <TextView
            android:id="@+id/speed_tv_neicun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Large Text"
            android:layout_gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/speed_button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        
        android:layout_weight="0"
        android:text="一键清理" 
        android:layout_gravity="center"
        android:background="@drawable/mytelshape"/>

    <ListView
        android:id="@+id/speed_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >
    </ListView>
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal" 
          android:layout_gravity="center"
          android:layout_marginBottom="3dp">

          <CheckBox
              android:id="@+id/phoneclean_checkBox"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:clickable="true"
              android:gravity="center"
              android:text="全选" />
         
    </LinearLayout>

</LinearLayout>